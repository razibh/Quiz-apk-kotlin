<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_android_black_24dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title Section"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:textSize="22sp"
            android:textColor="@color/white"
            android:text="Ques: 1/4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignParentEnd="true"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:text="Points: 4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.google.android.material.divider.MaterialDivider
        app:dividerColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="70dp"
       android:gravity="center_vertical"
       android:padding="20sp"
       android:background="@drawable/layout"
       android:orientation="horizontal">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
           android:id="@+id/tv1st_opt"
           android:textSize="25sp"
           android:textStyle="bold"
           android:textColor="@color/black"
           android:background="@drawable/circle"
           android:layout_gravity="center"
           android:text="A"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toEndOf="@+id/tv1st_opt"
           android:textColor="@color/black"
           android:textSize="25sp"

           android:text="1st question"/>


       <ImageView
           android:layout_alignParentEnd="true"
           android:visibility="visible"
           app:tint="@color/black"

           android:src="@drawable/ic_baseline_check_24"
           android:layout_width="50dp"
           android:layout_height="match_parent"/>
   </RelativeLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="20dp"
    android:background="@drawable/layout1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv2nd_opt"
            android:textSize="25sp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/circle"
            android:text="B"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
           android:layout_toEndOf="@+id/tv2nd_opt"
            android:textColor="@color/black"
            android:text="2nd question"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_check_24"/>
    </RelativeLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/layout"
        android:padding="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv3rd_opt"
            android:layout_marginEnd="20dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:background="@drawable/circle"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="C"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv3rd_opt"
            android:textSize="25sp"
            android:text="3rd question"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_check_24"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"/>
    </RelativeLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
        android:padding="20dp"
    android:background="@drawable/layout"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv4th_opt"
        android:layout_marginEnd="20dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:background="@drawable/circle"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="D"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv4th_opt"
        android:textSize="25sp"
        android:text="4th question"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_check_24"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>
</RelativeLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <Button
        android:background="@drawable/layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>